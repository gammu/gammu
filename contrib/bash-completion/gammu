_gammu_commands() 
{
    gammu help all | awk '/^$/,/ENDOFFILE/ {print $1}'
}

_gammu() 
{
    cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY=( $( compgen -W "$(_gammu_commands)" $cur ) )
}

complete -F _gammu -o default gammu

